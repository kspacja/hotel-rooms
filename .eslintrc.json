{
  "extends": "next/core-web-vitals",
  "plugins": ["import"],
  "rules": {
    "import/order": [
      "warn",
      {
        "pathGroups": [
          {
            "pattern": "@/*",
            "group": "external",
            "position": "after"
          },
          {
            "pattern": "@/layout/**",
            "group": "external",
            "position": "after"
          },
          {
            "pattern": "@/assets/**",
            "group": "external",
            "position": "after"
          },
          {
            "pattern": "@/store/**",
            "group": "external",
            "position": "after"
          },
          {
            "pattern": "@/lib/**",
            "group": "external",
            "position": "after"
          },
          {
            "pattern": "@/components/**",
            "group": "external",
            "position": "after"
          }
        ],
        "groups": ["builtin", "external", "parent", "sibling", "index"],
        "newlines-between": "always"
      }
    ]
  }
}
